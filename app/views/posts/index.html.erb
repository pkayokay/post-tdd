
<style> 
  .navbar-default {
    margin: 0;
    border-color: #000;
  }
</style>
<div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2" style="margin-top: 10px">
<% @posts.each do |post| %>
  <h2 class="post-title"><%= post.title %></h2>
  <p><%= post.caption %></p>
  <p><%= image_tag post.picture %></p>
    <% post.comments.each do |comment| %>
         <!--  <p><%= comment.user.email %></p> -->
          <p><%= comment.message %></p>
      <% end %>
      <%= simple_form_for Comment.new, url: post_comments_path(post) do |f| %>
        <%= f.input :message, label: false %>
        <%= f.submit 'Comment', class: 'btn btn-success' %>
      <% end %>
<% end %>


</div>